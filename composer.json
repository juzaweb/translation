{
    "name": "juzaweb/translation",
    "type": "juzaweb-plugin",
    "license": "GPL-2.0",
    "description": "Translation theme and plugin for Juzaweb cms",
    "extra": {
        "juzaweb": {
            "name": "Translation",
            "domain": "translation",
            "version": "1.0.2",
            "cms_min": "3.0",
            "providers": [
                "Juzaweb\\Translation\\Providers\\TranslationServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Juzaweb\\Translation\\": "src/"
        }
    },
    "require": {
        "php": "^8.0|^8.1"
    },
    "require-dev": {
        "juzaweb/modules": "^1.0",
        "juzaweb/dev-tool": "^1.0"
    }
}
